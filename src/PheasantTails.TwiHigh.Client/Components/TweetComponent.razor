@inherits UIComponentBase
@* ツイート外枠 *@
<article class="tweet-article">
    @if (Tweet != null)
    {
        @* 左 *@
        <div class="tweet-article-left">
            @* アイコン *@
            <AvatarComponent UserAvatarUrl="@Tweet.UserAvatarUrl" OnClick=OnClickAvatar />
        </div>
        @* 右 *@
        <div class="tweet-article-right">
            @* ヘッダー *@
            <div class="tweet-article-right-header">
                @* ユーザー名 *@
                <div class="user-display-name">
                    <span @onclick=OnClickUserDisplayName>@Tweet.UserDisplayName</span>
                </div>
                @* ユーザーID *@
                <div class="user-display-id">
                    <span @onclick=OnClickUserDisplayId>@@@Tweet.UserDisplayId</span>
                </div>
                @* 投稿時刻 *@
                <div class="user-display-createat">
                    <span title="@(Tweet.CreateAt.ToLocalTime().ToString("G"))">@Tweet.CreateAtDatetimeString</span>
                </div>
            </div>
            @* ボディ*@
            <div class="tweet-article-right-body" @onclick="OnClickTweetArea">
                @* テキスト本文 *@
                <div class="user-tweet-text">
                    @if (!string.IsNullOrEmpty(Tweet.ReplyToUserDisplayId) && !Tweet.IsDeleted)
                    {
                        <span class="reply"><AutoLink Text="@($"Replying to @{Tweet.ReplyToUserDisplayId}")" ReplaceUrl=false /></span>
                        <br />
                    }
                    <span><AutoLink Text="@Tweet.GetTextWithNewline()" ReplaceDisplayId=true /></span>
                </div>
            </div>
            <div class="tweet-article-right-footer">
                @if (!Tweet.IsDeleted)
                {
                    @if (IsOpendReplyPostForm)
                    {
                        <button class="link-button" @onclick=OnClickReplyPostCloseButton>
                            <span class="icon oi oi-circle-x"></span>
                            <span class="number">@Tweet.ReplyFrom.Length</span>
                        </button>
                    }
                    else
                    {
                        <button class="link-button" @onclick=OnClickReplyButton>
                            <span class="icon oi oi-comment-square"></span>
                            <span class="number">@Tweet.ReplyFrom.Length</span>
                        </button>
                    }
                    @*
            <button class="link-button">
            <span class="icon oi oi-star"></span>
            <span class="number">----</span>
            </button>
            *@
                    @if (IsMyTweet)
                    {
                        <button class="link-button" @onclick=OnClickDeleteButton>
                            <span class="icon oi oi-trash"></span>
                        </button>
                    }
                }
            </div>
        </div>
    }
</article>
@if (IsOpendReplyPostForm)
{
    <section class="reply-section">
        <PostFormComponent ReplyToContext=ReplyToContext TweetText="@($"@{Tweet?.UserDisplayId} ")" OnPostTweet="OnClickPostTweet" />
    </section>
}