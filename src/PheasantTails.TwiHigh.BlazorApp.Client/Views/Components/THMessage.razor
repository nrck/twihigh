@*
    メッセージコンポーネント
*@
@inherits TwiHighComponentBase
@rendermode InteractiveAuto
<div class="message-box @(IsClosed ? "fadeout" : "fadein")">
    <div class="message-text @MessageAreaCssClass">
        <span>
            @Context?.Message
        </span>
        <button class="close" @onclick="OnClickCloseButton">
            ×
        </button>
    </div>
</div>