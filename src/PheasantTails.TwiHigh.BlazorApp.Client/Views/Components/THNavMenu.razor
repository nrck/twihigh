@using Microsoft.AspNetCore.Components.Authorization
@using System.Runtime.InteropServices
@using System.Reflection
@inherits TwiHighComponentBase
@rendermode InteractiveWebAssembly

@* Brand name link. *@
<div class="top-row ps-3 navbar navbar-light">
    <div class="container-fluid">
        <AuthorizeView>
            <NotAuthorized>
                <a class="twihigh-brand" href="@NavigationManagerExtension.PAGE_PATH_INDEX">@(BRAND_NAME) <span class="ea">(Early Access)</span></a>
            </NotAuthorized>
            <Authorized>
                <a class="twihigh-brand" href="@NavigationManagerExtension.PAGE_PATH_HOME">@(BRAND_NAME) <span class="ea">(Early Access)</span></a>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@* Navigation menu button for mobile. *@
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

@* Navigation menu *@
@* TODO: Localize *@
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <AuthorizeView>
                <NotAuthorized>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_SIGNUP">
                        <span class="oi oi-check" aria-hidden="true"></span> 参加する
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_LOGIN">
                        <span class="oi oi-account-login" aria-hidden="true"></span> ログイン
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_LICENCE">
                        <span class="oi oi-badge" aria-hidden="true" style="padding-left: 6px; padding-top: 4px;"></span> ライセンス
                    </NavLink>
                </NotAuthorized>
                <Authorized>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_HOME">
                        <span class="oi oi-home" aria-hidden="true"></span> ホーム
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_FEED">
                        <div class="nav-link-notification">
                            <span class="oi oi-bell" aria-hidden="true" style="padding-top: 6px;"></span>
                            @if (FeedWorkerService.FeedTimeline.Any(f => f.IsOpened == false))
                            {
                                <span class="nav-link-notification-badge">@(FeedWorkerService.FeedTimeline.Count(f => f.IsOpened == false))</span>
                            }
                        </div>
                        通知
                    </NavLink>
                    <NavLink class="nav-link" href="@string.Format(NavigationManagerExtension.PAGE_PATH_PROFILE, string.Empty)">
                        <span class="oi oi-image" aria-hidden="true" style="padding-top: 6px;"></span> プロフィール
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_CLEAR_LOCALDATA">
                        <span class="oi oi-delete" aria-hidden="true" style="padding-top: 7px;"></span> キャッシュクリア
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_LICENCE">
                        <span class="oi oi-badge" aria-hidden="true" style="padding-left: 6px; padding-top: 7px;"></span> ライセンス
                    </NavLink>
                    <NavLink class="nav-link" href="@NavigationManagerExtension.PAGE_PATH_LOGOUT">
                        <span class="oi oi-account-logout" aria-hidden="true" style="padding-top: 6px;"></span> ログアウト
                    </NavLink>
                </Authorized>
            </AuthorizeView>
            <span class="version">
                Version @(Assembly.GetExecutingAssembly().GetName().Version?.ToString() ?? "undefined") [@(IsServerSideRendering ? "ServerSideRendering" : "WebAssembly")]
            </span>
        </div>
    </nav>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync().ConfigureAwait(false);
        await FeedStartAsync().ConfigureAwait(false);
    }

    public override async ValueTask DisposeAsync()
    {
        await FeedStopAsync().ConfigureAwait(false);
        await base.DisposeAsync().ConfigureAwait(false);
    }
}
