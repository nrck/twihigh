@page "/Profile/{Id}/Followers"
@using PheasantTails.TwiHigh.Data.Model.TwiHighUsers
@inherits TwiHighPageBase
@rendermode InteractiveAuto

<PageTitle>@(ViewModel.PageTitle.Value) - @(BRAND_NAME)</PageTitle>
<THOpenGraphProtocol Title="@($"{ViewModel.PageTitle.Value} - {BRAND_NAME}")"
                     Description="@($"{ViewModel.PageTitle.Value} は {ViewModel.UserFollowers.Count} 人です。")"
                     Image="@ViewModel.UserDisplayedOnScreen.Value?.AvatarUrl" />
<THPageHeaderTitle Title="@ViewModel.PageTitle.Value" />

<section>
    @if (ViewModel.UserFollowers == null)
    {
        <THLoading />
    }
    else if (0 < ViewModel.UserFollowers.Count)
    {
        @foreach (ResponseTwiHighUserContext user in ViewModel.UserFollowers)
        {
            <THUser User="user" />
        }
    }
    else
    {
        <THNoContents NoContentsText="フォロワーはいません。" />
    }
</section>
