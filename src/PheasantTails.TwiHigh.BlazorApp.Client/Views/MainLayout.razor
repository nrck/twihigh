@using Toolbelt.Blazor.PWA.Updater
@inherits LayoutComponentBase
@inject IMessageService MessageService

<div class="page">
    <div class="sidebar">
        <THNavMenu />
    </div>

    <main>
        <article>
            @Body
        </article>

        <section style="position: fixed; bottom: 0; z-index: 100; width: 100%; max-width: 640px;">
            @foreach (var item in MessageService.Messages)
            {
                <THMessage Context="item" />
            }
        </section>
    </main>
</div>

<div id="blazor-error-ui">
    ごめんなさい。うちのペンギンがまたやらかしたようです！
    <a href="" class="reload">ページを更新してエラーを解消する</a>
    <a class="dismiss">🗙</a>
</div>

<PWAUpdater Text="TwiHighの新しいバージョンがあります！" ButtonCaption="アップデートする" Align="PWAUpdater.Aligns.Buttom" />

@code
{
    protected override void OnInitialized()
    {
        base.OnInitialized();
        MessageService.OnChangedMessage = StateHasChanged;
    }
}