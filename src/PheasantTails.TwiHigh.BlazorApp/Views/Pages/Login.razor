@*
    Login page
*@
@page "/Login"
@inherits TwiHighPageBase
@*
    ref: https://zenn.dev/microsoft/articles/aspnetcore-blazor-dotnet8-tryaddauth
*@
<PageTitle>ログイン - @(BRAND_NAME)</PageTitle>
<THOpenGraphProtocol Title="@($"ログイン - {BRAND_NAME}")" />
<section>
    <EditForm FormName="login-form" EditContext="EditContext" OnValidSubmit="HandleValidSubmitAsync" class="login-form">
        <DataAnnotationsValidator />
        <ValidationSummary Model="Model" />
        <h2>ツイハイにログイン</h2>
        <div class="login-form-group">
            <label for="user-display-id">アカウントID</label>
            <InputText type="text" @bind-Value="Model.DisplayId" />
        </div>
        <div class="login-form-group">
            <label for="user-password">パスワード</label>
            <InputText type="password" @bind-Value="Model.PlainPassword" />
        </div>
        <div>
            <ValidationMessage For="() => Model.DisplayId" />
            <ValidationMessage For="() => Model.PlainPassword" />
        </div>
        <div class="login-form-group">
            <button type="submit" class="login-form-submit-button">
                <span>ログインする</span>
            </button>
        </div>
    </EditForm>
</section>
